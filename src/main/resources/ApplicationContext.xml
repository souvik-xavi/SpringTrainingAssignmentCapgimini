<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd">
                
     			<context:annotation-config />
     
     <!-- Setter Injection -->
     	 <bean id="person" class="com.assignment.bean.Person">
      		<constructor-arg index = "0" value="Souvik" />
      		<constructor-arg index = "1" value="21" />
      	</bean>
     
     <!-- Constructor Injection -->
     	<bean id="petAnimal" class="com.assignment.bean.LandAnimal">
      		<constructor-arg index = "0" value="Dog" />
      		<constructor-arg index = "1" value="Spanial" />
      		<constructor-arg index = "2" value="true" />
      		<constructor-arg index = "3" value="kannel" />
     	</bean>

 </beans>